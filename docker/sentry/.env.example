# SENTRY SELF-HOSTED CONFIGURATION

# Generate secret key: openssl rand -hex 32
SENTRY_SECRET_KEY=your-secret-key-here-generate-with-openssl

# Database
POSTGRES_PASSWORD=your-secure-postgres-password

# Sentry Configuration
SENTRY_MAIL_HOST=smtp.gmail.com
SENTRY_MAIL_PORT=587
SENTRY_MAIL_USERNAME=your-email@gmail.com
SENTRY_MAIL_PASSWORD=your-app-password
SENTRY_MAIL_FROM=sentry@yourdomain.com

# System
SENTRY_SYSTEM_URL_PREFIX=http://localhost:9000

# Admin User (created during install)
SENTRY_ADMIN_EMAIL=admin@yourdomain.com
SENTRY_ADMIN_PASSWORD=admin-password-here
